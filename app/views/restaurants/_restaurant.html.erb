<div class="row">
<div class="row">
  <div class="small-8 large-4 columns">
    <h3 class="restaurant-title"> <%= link_to restaurant do %><%= restaurant.name %><% end %></h3>
  </div>
  <div class="small-4 large-4 columns">
  </div>
</div>
<div class="row restaurant">
<div class="small-7 large-8 columns">
  <span class="address"><%= restaurant.address %></span>
</div>
<div class="small-5 large-4 columns responsive-categories">

  <% if restaurant.category.empty? %>

  <% else %>
  <ul>
    <% restaurant.category.each do |category| %>
    <li class="category"><%= category %></li>
    <% end %>
  </ul>
  <% end %>
  </div>
</div>
 <div class="row">
<% restaurant.images[0..3].each do |image| %>
<li class="list-images">
<%= link_to image do %><%= image_tag image.thumbnail_url %>
</li>
<% end %>
<% end %>
</div>

<br/>
</div>
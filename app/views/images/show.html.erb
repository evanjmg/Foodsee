<br/>
<% if !@image.restaurant.blank? %>
<h4 class="show-image">Photo from <%= @image.restaurant.name %></h4>  
<%= link_to image_tag(@image.image_file.thumb.url), @image.image_file.url %>
</p>
<div class="row">
  <div class="centering-show-image columns">
    <%= image_tag @image.url, class: 'show-image image-sized' %>
    <% if @image.tags[0].name != "[]" %>
    
  </div>
</div>
<div class="row hashtags-show-image coloring">
  <% @image.tags.each do |tag| %>
  #<%= link_to tag.name.tr("[]",""),  tag_images_path(tag.name) %>
  <% end %>
  <% end %>
</div>
<div class="row">
  <p>
    <br/>
  </p>
</div>
<p class="show-page-buttons">

  <div class="row text-center">
    <% if  @image.users.include?(current_user) %>
    <div class="small-4 columns">
      <button class="but">
        <%= link_to "Restaurant", restaurant_path(@image.restaurant), class: "show-page-button", id:"adjusted-button" %></button>
      </div>
      <div class="small-4 columns">

        <% if (current_user.voted_up_on? @image) %>
        <%= link_to "#", class: "show-page-button liked" do %> 
        <button class="but">Liked</button>
        <% end %>
        <% end %>
        <% if !(current_user.voted_up_on? @image) %>
        <%= link_to "#", class: "show-page-button like" do %>
        <button class="but">Like</button>
        <% end %>
        <% end %>
      </button>
    </div>
    <div class="small-4 columns">
      <button class="but">
        <%= link_to 'Delete', @image, method: :delete, class: "show-page-button" %>
      </button>
    </div>
  </div>
    <% else %>
    <div class="row text-center">
      <div class="small-6 columns" style="">
       <% if (current_user.voted_up_on? @image) %>
       <%= link_to "#", class: "show-page-button liked" do %> 
       <button class="but">Liked</button>
       <% end %>
       <% end %>
       <% if !(current_user.voted_up_on? @image) %>
       <%= link_to "#", class: "show-page-button like" do %>
       <button class="but">Like</button>
       <% end %>
       <% end %>
     </button>

   </div>
   <div class="small-6 columns">
    <%= link_to "Go to Restaurant", restaurant_path(@image.restaurant), class: "show-page-button desktop-button but" %>
    <%= link_to "Go to Restaurant", restaurant_path(@image.restaurant), class: "show-page-button responsive-button but" %>
  </div>
</div>
<% end %>
</div>
<% end %>
</p>

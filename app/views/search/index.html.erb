
<% if current_user.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(current_user.errors.count, "error") %> occurred:</h2>

  <ul>
    <% current_user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<h2>Select up to 10 Photos</h2>
<div id="search-api-results">
<%= form_for(add_search_images_to_user_path) do |f| %>
<div class="row">

<div class="small-12 large-6 columns" style="margin-bottom:10px;">
  <span id="counter"></span> Photos Selected
</div>
<div class="small-0 large-6 columns desktop-button">
<%= f.submit "Get Restaurants", id: 'submit-selection', class: "animated pulse button" %>
</div>
</div>
<div class="row responsive-button" style="margin-top:20px;">
<%= f.submit "Get Restaurants", id: 'submit-selection', class: "animated pulse button expand" %>
  </div>

<br/>
<div class="row">
<%= f.collection_check_boxes(:image_ids, @images, :id, :thumbnail_url) do |b| %>
  
  <li>
  <%= b.label do %>
  <div class="image-container">
  <%= image_tag(b.object.thumbnail_url) %>
  </div>
  <% end %>
  <%= b.check_box %></li>
<% end %>
<% end %>
</div>

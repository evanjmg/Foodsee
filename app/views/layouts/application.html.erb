<% if current_user %>
<body>

  <%= render 'layouts/header' %>
  <% else %>
  <body class='landing-page'>
   <div class="wrapper">

    <% end %>
    <div class="main-container">
      <%= render 'layouts/messages' %>
      <%= yield %>
    </div>
    
  </div>
  <div class="push"></div>
</div>

<%= render 'layouts/footer' %>
</body>

</html>


